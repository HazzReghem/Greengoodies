{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent()}} {% endblock %}

{% block content %}
    <h2>Connexion</h2>

    {% if error %}
        <p style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}">
        <label for="username">Adresse email</label>
        <input type="email" value="{{ email }}" name="_username" id="username" required>

        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" required>

        <button type="submit">Se connecter</button>
    </form>
{% endblock %}
