{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent()}} {% endblock %}

{% block content %}
    <section id="login-section">
        <img src="{{ asset('images/login.webp') }}" alt="image de végétation">

        <div class="login">
            <h1>Connexion</h1>
            <p>Connectez-vous pour accéder à votre espace personnel.</p>

            <form method="post" action="{{ path('app_login') }}" class="login-form">
                <label for="username">Adresse email</label>
                <input type="email" value="{{ email }}" name="_username" id="username" required>

                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" required>

                <button type="submit" class="btn">Se connecter</button>
                <a href="{{ path('app_register') }}" class="link-login">Pas encore de compte ? S'inscrire</a>
            </form>
        </div>
    </section>
{% endblock %}
